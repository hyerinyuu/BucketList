<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:jdbc="http://www.springframework.org/schema/jdbc"
	xmlns:mybatis-spring="http://mybatis.org/schema/mybatis-spring"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans https://www.springframework.org/schema/beans/spring-beans-4.3.xsd
		http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context-4.3.xsd
		http://www.springframework.org/schema/jdbc https://www.springframework.org/schema/jdbc/spring-jdbc-4.3.xsd
		http://mybatis.org/schema/mybatis-spring http://mybatis.org/schema/mybatis-spring-1.2.xsd
		http://www.springframework.org/schema/tx https://www.springframework.org/schema/tx/spring-tx-4.3.xsd">

	<bean id="oracleDS" class="org.apache.commons.dbcp2.BasicDataSource">
		<property name="driverClassName" value="oracle.jdbc.OracleDriver" />
		<property name="url" value="jdbc:oracle:thin:@localhost:1521:xe" />
		<property name="username" value="bbs" />
		<property name="password" value="bbs" />
	</bean>

	<!-- * mapperLocations : xml mapper를 사용하기 위한 설정 -->

	<!-- * typeAliases Package : vo 클래스를 자동으로 type 설정하기 위함 -->

	<!-- * jdbcTypeForNull : NOT NULL 설정을 해둔 칼럼에 데이터가 입력되지 않으면 부적절한 열유형 1111 
		Exception이 계속 발생하는데, 이러한 Exception을 방지하기 위한 jdbcType=VARCHAR등의 속성을 칼럼마다 추가해 
		주지 않아도 jdbyTypeForNull 속성값을 VARCHAR로 해주면 자동으로 추가되는 기능 -->

	<!-- * mapUnderscoreToCamelCase : 테이블의 칼럼이름은 snake-case로 작성하고 vo 클래스의 필드변수는 
		Camel-case로 작성했을 때 이름 자동변환을 통해 table과 연동되게 하는 옵션이다. 우리 프로젝트는 vo클래스 필드변수를 
		snake-case로 작성하고 이 옵션을 false로 설정해둔다. 기본값은 false -->
	<bean class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="oracleDS"/>
		<property name="mapperLocations" value="/WEB-INF/spring/mybatis/mapper/*-mapper.xml" />
		<property name="typeAliasesPackage" value="com.biz.bucket.domain" />
		<property name="configuration">
			<bean class="org.apache.ibatis.session.Configuration">
				<property name="jdbcTypeForNull" value="VARCHAR"/>
				<property name="mapUnderscoreToCamelCase" value="false"/>
				
				<property name="cacheEnabled" value="true" />
				<property name="defaultExecutorType" value="REUSE" />
				<property name="logPrefix"  value="###MYBATIS LOG >> "/>
			</bean>
		</property>
	</bean>

	<!-- transaction 자동화 설정 -->
	<tx:annotation-driven />
	<!-- Annotaion 방식의 query 사용을 위한 설정 -->
	<bean id="transactionManager"
		class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="oracleDS" />
	</bean>

	<mybatis-spring:scan
		base-package="com.biz.bucket.repository" />

</beans>
